<footer class="sacda-footer relative flex flex-col-reverse justify-between gap-4 px-6 pt-10 pb-24 md:flex-row md:py-24 lg:flex-row lg:py-24 bg-foreground">
  {# Partners section #}
  <div class="">
    <div class="flex flex-row items-center gap-5 pb-3">
      {% if footer_partners is not empty %}
        {% for partner in footer_partners %}
          <a href="{{ partner.link }}" target="_blank" rel="noopener noreferrer" class="flex items-center h-10 min-w-0">
            <img src="{{ partner.image }}" alt="{{ partner.name }}" class="h-16!" />
          </a>
        {% endfor %}
      {% endif %}
    </div>
  </div>

  <div class="flex flex-col gap-4 text-background md:w-fit lg:w-fit">
    <p class="w-fit border-b border-b-secondary pb-1 text-lg font-bold uppercase md:self-end lg:self-end">
			GET IN TOUCH
		</p>

		<div class="flex flex-row gap-3 justify-end">
			{% if footer_social_links is not empty %}
				{% for social in footer_social_links %}
					{% if social.link %}
						<a
							href="{{ social.link }}"
							target="_blank"
							rel="noopener noreferrer"
							class="flex h-12 w-12 items-center justify-center rounded-full text-lg text-background border border-secondary hover:text-secondary transition-colors"
							title="{{ social.title|default('') }}"
						>
							{{ social_icons[social.icon]|default(social_icons['website'])|raw }}
						</a>
					{% endif %}
				{% endfor %}
			{% endif %}
		</div>
	</div>

	{# Copyright section #}
	<div class="absolute bottom-6 w-full self-center text-center text-sm text-background md:w-fit md:self-start lg:w-fit lg:self-start">
		<a href="https://sacda.ca/policy/takedown" class="hover:text-secondary">Statement of Use and Takedown Policy</a>
		|
		<a href="https://sacda.ca/index.php/About/media" class="hover:text-secondary">Media</a>		
		&copy; {{ current_year|default('now'|date('Y')) }} {{ site_name|default('South Asian Canadian Digital Archive') }}. All rights reserved.
	</div>
</footer>
