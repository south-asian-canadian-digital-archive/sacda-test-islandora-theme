/**
 * Implements hook_preprocess_HOOK() for page.html.twig.
 */
function sacda_test_2_preprocess_page(array &$variables): void {
  // Pass site name to templates.
  $variables['site_name'] = \Drupal::config('system.site')->get('name');

  // Pass the current year for copyright.
  $variables['current_year'] = date('Y');

  // Optional: Pass a footer-specific logo if different from main logo.
  // $variables['footer_logo'] = '/' . \Drupal::theme()->getActiveTheme()->getPath() . '/logo.svg';
}

